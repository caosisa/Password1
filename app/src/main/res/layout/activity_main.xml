<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#F1F2F4">
    <TextView
            android:text="창가 7번 테이블"
            android:layout_width="206dp"
            android:layout_height="56dp" android:id="@+id/TableNum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139"
            android:textSize="25sp" android:gravity="center" android:textColor="#707070" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:background="#DBDBDC"/>
    <TextView
            android:text="@string/tv_pw_input_msg"
            android:layout_width="132dp"
            android:layout_height="34dp" android:id="@+id/Guide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center" android:textColor="#707070" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.28" app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.467">
        <TextView
                android:text="T1"
                android:gravity="center"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/input1" android:layout_weight="1"
                android:background="@drawable/password_c2" android:onClick="onNumPadClicked"/>
        <TextView
                android:text="T2"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/password_c2"
                android:layout_height="wrap_content" android:id="@+id/input2" android:layout_weight="1"/>
        <TextView
                android:text="T3"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/password_c2"
                android:layout_height="wrap_content" android:id="@+id/input3" android:layout_weight="1"/>
        <TextView
                android:text="T4"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/password_c2"
                android:layout_height="wrap_content" android:id="@+id/input4" android:layout_weight="1"/>
        <TextView
                android:text="T5"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:background="@drawable/password_c2"
                android:layout_height="wrap_content" android:id="@+id/input5" android:layout_weight="1"/>
        <TextView
                android:text="T6"
                android:gravity="center"
                android:background="@drawable/password_c2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/input6" android:layout_weight="1"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="8dp" android:layout_marginTop="16dp">
            <Button
                    android:text="7"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/bt_NumPad_7"  android:onClick="onNumPadClicked"/>
            <Button
                    android:text="8"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"
                    android:onClick="onNumPadClicked"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/bt_NumPad_8"
                    />
            <Button
                    android:text="9" android:id="@+id/bt_NumPad_9"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:layout_width="0dp"
                    android:onClick="onNumPadClicked"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="77dp" android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp">
            <Button
                    android:text="4" android:id="@+id/bt_NumPad_4"
                    android:textSize="30sp"
                    android:onClick="onNumPadClicked"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            <Button
                    android:text="5" android:id="@+id/bt_NumPad_5"
                    android:textSize="30sp"
                    android:onClick="onNumPadClicked"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            <Button
                    android:text="6" android:id="@+id/bt_NumPad_6"
                    android:textSize="30sp"
                    android:onClick="onNumPadClicked"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
            <Button
                    android:text="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/bt_NumPad_1"
                    android:onClick="onNumPadClicked"/>
            <Button
                    android:text="2"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    android:onClick="onNumPadClicked"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/bt_NumPad_2"
            />
            <Button
                    android:text="3"
                    android:onClick="onNumPadClicked"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/bt_NumPad_3"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="8dp" android:layout_marginBottom="16dp">
            <Button
                    android:text="@string/bt_del_all"
                    android:textSize="18sp"
                    android:layout_weight="1" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center" android:textColor="#707070" android:textStyle="bold"
                    app:backgroundTint="#FF7C80"
                    android:layout_width="0sp"
                    android:background="#FFFFFF"
                    android:layout_height="match_parent" android:id="@+id/bt_NumPad_AllClear"
                    android:onClick="onClearAll"/>
            <Button
                    android:text="0"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    android:background="#FFFFFF"
                    android:onClick="onNumPadClicked"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/bt_NumPad_0"
            />
            <Button
                    android:text="@string/bt_del_one"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:gravity="center" android:textColor="#707070" android:textStyle="bold"
                    app:backgroundTint="#F9BF00"
                    android:background="#FFFFFF"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/bt_NumPad_ClearOne"
                    android:onClick="onClearOne"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

